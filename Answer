    private void computeBtnMouseClicked(java.awt.event.MouseEvent evt) {                                        
        // TODO add your handling code here:
        displayA.setText("Calculation\n\nLength is " + lengthTF.getText() + "\nWidth is " + widthTF.getText() + "\nArea is " + lengthTF.getText() + " * " + widthTF.getText() + " = " + areaTF.getText() + "\nPerimeter is 2 * (" + widthTF.getText() + " * " + lengthTF.getText() + ") = " + perimeterTF.getText() );
        
        
    }                                       

